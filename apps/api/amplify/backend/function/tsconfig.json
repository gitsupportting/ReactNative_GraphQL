{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": ["es2019"],
        "outDir": "./",
        "strict": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "isolatedModules": true,
        "incremental": true,
        "moduleResolution": "node"
    },
    "include": ["./*.ts"],
    "exclude": ["node_modules"]
}
